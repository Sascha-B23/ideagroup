<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        >
        <TextView
            android:id="@+id/tv_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="random"
            android:layout_alignParentLeft="true"
            app:layout_constraintStart_toStartOf="@id/clayout"
            app:layout_constraintTop_toTopOf="@id/clayout"
            />

        <TextView
            android:id="@+id/tv_list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-10dp"
            android:text="Test"
            app:layout_constraintTop_toTopOf="@id/clayout"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/clayout"
            />
        <TextView
            android:id="@+id/tv_list3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-10dp"
            android:text="Test"
            app:layout_constraintStart_toStartOf="@id/clayout"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_list"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>